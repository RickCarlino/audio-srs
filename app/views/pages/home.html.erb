  <div class="col-md-1 text-center"></div>
  <div class="col-md-10 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>LingoLobster</h1>
      </div>
      <div class="panel-body">
        <h4>LingoLobster uses spaced repetition to help you memorize <strong>foreign language vocabulary through listening only</strong>.</h4>
        <%= form_for Deck.new do |f| %>
          <%= f.submit 'New Vocabulary Deck', class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
